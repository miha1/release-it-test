{
  "npm" : false,
  "git": {
    "requireUpstream": false,
    "tagName": "v${version}",
    "tag": false,
    "addUntrackedFiles": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "eslint",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": { "file": "VERSION", "type": "text/plain" },
      "out": { "file": "VERSION", "type": "text/plain" }
    }
  }
}
